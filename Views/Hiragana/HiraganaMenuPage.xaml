<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JapaneseLearningApp.Views.Hiragana.HiraganaMenuPage"
             Title="Hiragana"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header Section -->
            <StackLayout Spacing="8">
                <Label Text="Hiragana ひらがな" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="#2C3E50" 
                       HorizontalOptions="Center" />
                <Label Text="12/46 Characters Mastered" 
                       FontSize="16" 
                       TextColor="#7F8C8D" 
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Statistics Card -->
            <Border BackgroundColor="White" 
                    StrokeShape="RoundRectangle 10"
                   Padding="20">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                      ColumnDefinitions="*,*" 
                      RowSpacing="15" 
                      ColumnSpacing="10">
                    
                    <!-- Progress Circle Section -->
                    <StackLayout Grid.Row="0" Grid.ColumnSpan="2" 
                                 Orientation="Horizontal" 
                                 HorizontalOptions="Center" 
                                 Spacing="15">
                        <!-- Placeholder for progress circle -->
                        <Border BackgroundColor="#E8F4FD" 
                                StrokeShape="25,25,25,25"
                               WidthRequest="100" 
                               HeightRequest="100">
                            <StackLayout VerticalOptions="Center" 
                                         HorizontalOptions="Center">
                                <Label Text="📊" FontSize="24" HorizontalOptions="Center" />
                                <Label Text="26%" 
                                       FontSize="20" 
                                       FontAttributes="Bold" 
                                       TextColor="#3498DB" 
                                       HorizontalOptions="Center" />
                            </StackLayout>
                        </Border>
                    </StackLayout>

                    <!-- Statistics Grid -->
                    <StackLayout Grid.Row="1" Grid.Column="0" 
                                 Orientation="Horizontal" 
                                 Spacing="8">
                        <Label Text="🔥" FontSize="20" />
                        <StackLayout>
                            <Label Text="Current Streak" 
                                   FontSize="12" 
                                   TextColor="#7F8C8D" />
                            <Label Text="7 days" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#E74C3C" />
                        </StackLayout>
                    </StackLayout>

                    <StackLayout Grid.Row="1" Grid.Column="1" 
                                 Orientation="Horizontal" 
                                 HorizontalOptions="End"
                                 Spacing="8">
                        <Label Text="🎯" FontSize="20" />
                        <StackLayout>
                            <Label Text="Accuracy" 
                                   FontSize="12" 
                                   TextColor="#7F8C8D" />
                            <Label Text="85%" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#27AE60" />
                        </StackLayout>
                    </StackLayout>

                    <StackLayout Grid.Row="2" Grid.ColumnSpan="2" 
                                 Orientation="Horizontal" 
                                 Spacing="8" 
                                 HorizontalOptions="Center">
                        <Label Text="📚" FontSize="20" />
                        <StackLayout>
                            <Label Text="Characters Learned" 
                                   FontSize="12" 
                                   TextColor="#7F8C8D" />
                            <Label Text="12/46" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="#8E44AD" />
                        </StackLayout>
                    </StackLayout>

                </Grid>
            </Border>

            <!-- Action Buttons Section -->
            <Label Text="Study Options" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   TextColor="#2C3E50" 
                   Margin="0,10,0,0" />

            <!-- Browse Characters Button -->
            <Border BackgroundColor="#E8F4FD" 
                    StrokeShape="RoundRectangle 10"
                   Padding="0">
                <Grid ColumnDefinitions="Auto,*,Auto" 
                      ColumnSpacing="15" 
                      Padding="20">
                    
                    <Label Grid.Column="0" 
                           Text="📖" 
                           FontSize="32" 
                           VerticalOptions="Center" />
                    
                    <StackLayout Grid.Column="1" 
                                 VerticalOptions="Center" 
                                 Spacing="4">
                        <Label Text="Browse All" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#2980B9" />
                        <Label Text="Study all hiragana characters" 
                               FontSize="14" 
                               TextColor="#34495E" />
                    </StackLayout>
                    
                    <Label Grid.Column="2" 
                           Text="→" 
                           FontSize="24" 
                           TextColor="#3498DB" 
                           VerticalOptions="Center" />
                </Grid>
                
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBrowseCharactersTapped" />
                </Border.GestureRecognizers>
            </Border>

            <!-- Practice Mode Button -->
            <Border BackgroundColor="#E8F6E8" 
                    StrokeShape="RoundRectangle 10"
                   Padding="0">
                <Grid ColumnDefinitions="Auto,*,Auto" 
                      ColumnSpacing="15" 
                      Padding="20">
                    
                    <Label Grid.Column="0" 
                           Text="✏️" 
                           FontSize="32" 
                           VerticalOptions="Center" />
                    
                    <StackLayout Grid.Column="1" 
                                 VerticalOptions="Center" 
                                 Spacing="4">
                        <Label Text="Practice" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#27AE60" />
                        <Label Text="Practice with flashcards and exercises" 
                               FontSize="14" 
                               TextColor="#34495E" />
                    </StackLayout>
                    
                    <Label Grid.Column="2" 
                           Text="→" 
                           FontSize="24" 
                           TextColor="#2ECC71" 
                           VerticalOptions="Center" />
                </Grid>
                
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPracticeModeTapped" />
                </Border.GestureRecognizers>
            </Border>

            <!-- Quiz Mode Button -->
            <Border BackgroundColor="#F3E8F6" 
                    StrokeShape="RoundRectangle 10"
                   Padding="0">
                <Grid ColumnDefinitions="Auto,*,Auto" 
                      ColumnSpacing="15" 
                      Padding="20">
                    
                    <Label Grid.Column="0" 
                           Text="🎯" 
                           FontSize="32" 
                           VerticalOptions="Center" />
                    
                    <StackLayout Grid.Column="1" 
                                 VerticalOptions="Center" 
                                 Spacing="4">
                        <Label Text="Take Quiz" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#8E44AD" />
                        <Label Text="Test your knowledge" 
                               FontSize="14" 
                               TextColor="#34495E" />
                    </StackLayout>
                    
                    <Label Grid.Column="2" 
                           Text="→" 
                           FontSize="24" 
                           TextColor="#9B59B6" 
                           VerticalOptions="Center" />
                </Grid>
                
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnQuizModeTapped" />
                </Border.GestureRecognizers>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>