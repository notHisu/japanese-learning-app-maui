<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JapaneseLearningApp.Views.HomePage"
             Title="Home">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Welcome to Japanese Learning App"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Kana"
               Clicked="OnKanaClicked"/>

        <Button Text="Vocabulary"
                Clicked="OnVocabularyClicked" />

        <Button Text="Kanji"
                Clicked="OnKanjiClicked" />

        <Button Text="Quiz"
                Clicked="OnQuizClicked" />
    </VerticalStackLayout>
</ContentPage>
