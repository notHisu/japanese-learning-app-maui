<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JapaneseLearningApp.Views.KanaPage"
             Title="Kana Study">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Hiragana" FontSize="24" />
            <CollectionView ItemsSource="{Binding HiraganaList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="5">
                            <HorizontalStackLayout>
                                <Label Text="{Binding Character}" FontSize="20"/>
                                <Label Text="{Binding Romaji}" FontSize="16" TextColor="Gray" Margin="10,0,0,0" />
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="Katakana" FontSize="24" Margin="0,20,0,0" />
            <CollectionView ItemsSource="{Binding KatakanaList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="5" >
                            <HorizontalStackLayout>
                                <Label Text="{Binding Character}" FontSize="20" />
                                <Label Text="{Binding Romaji}" FontSize="16" TextColor="Gray" Margin="10,0,0,0" />
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
